GET        /                                  @controllers.GamesApi.index

GET        /games/                            @controllers.GamesApi.gamesByIds(game: MultipleByIdQuery)
GET        /games/:gameType/focus/:id/        @controllers.GamesApi.focusGames(focus: Focus, gameType: GameType, id: GameId, playerCondition: PlayerCondition, tagFilter: TagFilter, server: ServerFilter)
GET        /games/:gameType/:timing/          @controllers.GamesApi.timedGames(gameType: GameType, timing: TimingCondition, playerCondition: PlayerCondition, limit: LimitCondition, tagFilter: TagFilter, server: ServerFilter)
GET        /game/:id/                         @controllers.GamesApi.gameById(id: GameId)

GET        /nicknames/                        @controllers.GamesApi.getNicknames

GET        /new-games/:gameType/              @controllers.GamesApi.newGames(gameType: GameType, playerCondition: PlayerCondition, tagFilter: TagFilter, server: ServerFilter)
GET        /live-games/:gameType/             @controllers.GamesApi.liveGames(gameType: GameType, playerCondition: PlayerCondition, tagFilter: TagFilter, server: ServerFilter)

GET        /version/                          controllers.Version.getVersion

GET        /clans/                            @controllers.ClansApi.getClans
