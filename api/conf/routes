GET        /                             @controllers.GamesApi.index

GET        /games/                       @controllers.GamesApi.gamesByIds(game: MultipleByIdQuery)
GET        /games/new/                   @controllers.GamesApi.newGames(queryCondition: QueryCondition)
GET        /games/live/                  @controllers.GamesApi.liveGames(queryCondition: QueryCondition)
GET        /games/:timing/               @controllers.GamesApi.timedGames(timing: TimingCondition, queryCondition: QueryCondition, limit: LimitCondition)
GET        /games/:direction/:id/        @controllers.GamesApi.directedGames(direction: LookupDirection, id: GameId, queryCondition: QueryCondition, limit: LimitCondition)
GET        /game/:id/                    @controllers.GamesApi.gameById(id: GameId)

GET        /nicknames/                   @controllers.GamesApi.getNicknames

GET        /version/                     controllers.Version.getVersion

GET        /clans/                       @controllers.ClansApi.getClans
