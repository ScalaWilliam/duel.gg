GET         /                                  @controllers.GamesApi.index

GET         /games/                            @controllers.GamesApi.gamesByIds(game: MultipleByIdQuery)
GET         /games/:gameType/focus/:id/        @controllers.GamesApi.focusGames(focus: Focus, gameType: GameType, id: GameId, playerCondition: PlayerCondition, limitCondition: LimitCondition)
GET         /games/:gameType/:timing/          @controllers.GamesApi.timedGames(gameType: GameType, timing: TimingCondition, playerCondition: PlayerCondition, limitCondition: LimitCondition)
GET         /game/:id/                         @controllers.GamesApi.gameById(id: GameId)

GET         /new-games/                        @controllers.GamesApi.newGames

GET         /players/                          @controllers.PlayersApi.listPlayers
GET         /player/:id/                       @controllers.PlayersApi.getPlayer(id)
GET         /clans/                            @controllers.PlayersApi.listClans
GET         /clan/:id/                         @controllers.PlayersApi.getClan(id)
POST        /players/register/                 @controllers.PlayersApi.registerPlayer
POST        /clans/register/                   @controllers.PlayersApi.registerClan
POST        /player/:id/set-nickname/          @controllers.PlayersApi.setNickname(id)
POST        /clan/:id/set-patterns/            @controllers.PlayersApi.setPatterns(id)

GET         /version/                          controllers.Version.getVersion