GET / @controllers.GamesApi.index
GET        /games/                      @controllers.GamesApi.gamesByIds(game: gg.duel.query.MultipleByIdQuery)
GET        /games/*condition            @controllers.GamesApi.games(condition: gg.duel.query.TimingCondition, playerCondition: controllers.PlayerCondition)
GET        /ctf/games/*condition        @controllers.GamesApi.ctfGames(condition: gg.duel.query.TimingCondition, playerCondition: controllers.PlayerCondition)
GET        /duels/*condition            @controllers.GamesApi.duels(condition: gg.duel.query.TimingCondition, playerCondition: controllers.PlayerCondition)
GET        /game/:id/                   @controllers.GamesApi.gameById(id: gg.duel.query.GameId)
GET        /new-games/                @controllers.GamesApi.newGames
GET        /version/        controllers.Version.getVersion
GET        /nicknames/        @controllers.GamesApi.getNicknames

GET         /players/                        @controllers.PlayersApi.listPlayers
GET         /player/:id/                     @controllers.PlayersApi.getPlayer(id)
GET         /clans/                          @controllers.PlayersApi.listClans
GET         /clan/:id/                       @controllers.PlayersApi.getClan(id)
POST        /players/register/               @controllers.PlayersApi.registerPlayer
